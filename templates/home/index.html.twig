{% extends 'base.html.twig' %}

{% block body %}

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
        <div class="col-md-5 p-lg-5 mx-auto my-5">
            <h1 class="display-4 font-weight-normal">Meetup Manager</h1>
            <p class="lead font-weight-normal">Submit your conference proposal here ! Vote for conferences you want to see at the next event !</p>
            <a class="btn btn-outline-secondary" href="#">Start</a>
        </div>
        <div class="product-device box-shadow d-none d-md-block"></div>
        <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="flash-succes">
            {{ message }}
        </div>
    {% endfor %}


    {% for conference in conferences %}
    {% if conference.id is divisible by (2) %}

        <div class="d-md-flex flex-md-equal w-00 my-md-3 pl-md-3" style="justify-content: center;" >

            <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden" style="width: 100%">
                <div class="my-3 py-3">
                    <h2 class="display-5" style="color:black">{{ conference.title }}</h2>
                </div>
                <div class="bg-dark box-shadow mx-auto" style="width: 80%; height: 100px; border-radius: 21px 21px 21px 21px;">
                    <p style ="color:white; text-align: left; padding: 20px">{{ conference.description }}</p>
                </div>
                <div class="my-3 py-3">
                    <a href="{{ path('app_conference_id', {id : conference.id}) }}"> <button type="button" class="btn btn-raised btn-lg">Details</button></a>
                </div>
            </div>
        </div>

    {% else %}
        <div class="d-md-flex flex-md-equal w-00 my-md-3 pl-md-3" style="justify-content: center;" >

            <div class="bg-primary mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden" style="width: 100%">
                <div class="my-3 py-3">
                    <h2 class="display-5">{{ conference.title }}</h2>
                </div>
                <div class="bg-light box-shadow mx-auto" style="width: 80%; height: 100px; border-radius: 21px 21px 21px 21px;">
                    <p style ="color:black; text-align: left; padding: 20px">{{ conference.description }}</p>
                </div>
                <div class="my-3 py-3">
                    <a href="{{ path('app_conference_id', {id : conference.id}) }}"> <button type="button" class="btn btn-raised btn-lg">Details</button></a>
                </div>
            </div>
        </div>
    {% endif %}
    {% endfor %}
{% endblock %}